---
import "../styles/GlobalStyles.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- HTML Meta Tags -->
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta
      name="description"
      content="Hi, I'm Sebastian Terleira, a.k.a Crazy Galanga. Galanga Developer and Frontend Designer"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="robots" content="index, follow" />
    <!-- <meta name="theme-color" content="#fff" /> -->
    <link rel="canonical" href="https://crazygalanga.vercel.app/" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/fonts/fonts.css" />

    <!-- Facebook Meta Tags  -->
    <meta property="og:url" content="https://crazygalanga.vercel.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Crazy Galanga" />
    <meta
      property="og:description"
      content="Galanga Developer and Frontend Designer"
    />
    <meta
      property="og:image"
      content="/Vortigaunt.png"
    />

    <!-- Twitter Meta Tags  -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="crazygalanga.vercel.app" />
    <meta property="twitter:url" content="https://crazygalanga.vercel.app/" />
    <meta name="twitter:title" content="Crazy Galanga" />
    <meta
      name="twitter:description"
      content="Galanga Developer and Frontend Designer"
    />
    <meta
      name="twitter:image"
      content="/Vortigaunt.png"
    />
  </head>
  <body>
    <div class="line"></div>
    <main class="main">
      <slot />
    </main>

    <style>
      .main {
        -webkit-animation: fadein 2s;
        -moz-animation: fadein 2s;
        -o-animation: fadein 2s;
        animation: fadein 2s;
      }

      .line {
        border-left: 1px solid transparent;
        height: 90px;
        margin: 0 auto;
        margin-top: 0px;
      }

      @keyframes fadein {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }
    </style>
  </body>
</html>
